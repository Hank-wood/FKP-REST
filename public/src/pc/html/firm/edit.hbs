<link href="{{root}}/statics/front/css/jquery.fileupload.css" rel="stylesheet">
<link href="{{root}}/statics/front/css/lightbox.css" rel="stylesheet">
<div class="wrapper">
	<div class="current_path container">
		<a href="{{root}}/index.html">首页</a> > <a class="currents"> 企业介绍 </a>
	</div>
	<div class="myaccount_main">
		<div class="container">
			<div class="row clearfix">
				<div class="account_l fl wid-2">
					@@include('../_common/account.hbs')
				</div>
				<div class="fl wid-10 myaccount_about">
					<div class="myaccount_abtitle">
							企业简介
					</div>
					<div id="container" class="">
					<form action="" id="firmIntroduceForm" method="post">
						<script id="editor" name="introduce" type="text/plain" style="width:1004px; height:500px;">
							{{{firmDetail.introduce}}}
						</script>
					</form>
					</div>
					<div>
						<button type="button" id="save-firm-introduce" class="btn btn-orange">保存内容</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="modal fade" id="infoDialog" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="myModalLabel">提示</h4>
