			<div class="modal-body login_body">
				<p id="infoDialogText"></p>
			</div>
		</div>
	</div>
</div>
@@include('../_common/footer/footer.html')
@@include('../_common/footer/foot.html')
<script src="/js/t/ueditor/ueditor.config.js"></script>
<script src="/js/t/ueditor/ueditor.all.min.js"></script>
<script src="/js/t/ueditor/lang/zh-cn/zh-cn.js"></script>

<script type="text/javascript">
window.CTX = "{{root}}";
$(document).ready(function() {
	UE.Editor.prototype._bkGetActionUrl = UE.Editor.prototype.getActionUrl;
	UE.Editor.prototype.getActionUrl = function(action) {
	    if (action == 'uploadimage' || action == 'uploadscrawl' || action == 'uploadimage') {
	        return '{{root}}/ueditor/uploadimage.html';
	    } else if (action == 'uploadvideo') {
	        return '{{root}}/ueditor/uploadimage.html';
	    } else {
	        return this._bkGetActionUrl.call(this, action);
	    }
	};
    var ue = UE.getEditor('editor', {
    	toolbars: [
    		['undo', 'redo', 'bold', 'italic', 'underline', 'fontborder', 'strikethrough', 'superscript',
    		 'subscript', 'removeformat', 'formatmatch', 'autotypeset', 'blockquote', 'pasteplain', '|', 'forecolor',
    		 'backcolor', 'insertorderedlist', 'insertunorderedlist', 'selectall', 'simpleupload']
        ],
        imagePathFormat: "",
        elementPathEnabled: false,
        autoHeight: false
    });
});
</script>
</body>
</html>
