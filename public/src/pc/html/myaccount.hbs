<div class="wrapper">
    <div class="current_path container">
        <a href="#">首页</a> > <a class="currents"> 会员中心 </a>
    </div>
    <div class="myaccount_main">
        <div class="container">
            <div class="row clearfix">
                <div class="account_l fl col-lg-2">
                    <div class="account_nav">
                        <dl>
                            <dt><i class="nav-icon"></i>会员中心</dt>
                            <dd class="active"><a href="#">我的账号</a></dd>
                            <dd><a href="mygoods.html">我的商品</a></dd>
                            <dd><a href="myorder.html">我的订单</a></dd>
                            <dd><a href="#">我的求购</a></dd>
                        </dl>
                    </div>
                </div>
                <div class="account_r fl col-lg-10">
                    <ul id="myTab" class="nav nav-tabs">
                        <li class="active"><a href="#mybasic" data-toggle="tab"><i></i>基本信息</a></li>
                        <li><a href="#myapprove" data-toggle="tab">用户认证</a></li>
                        <li><a href="#mypwd" data-toggle="tab">修改密码</a></li>
                    </ul>
                    <div id="myTabContent" class="tab-content account_content">
                        <div class="tab-pane fade in active" id="mybasic">
                            <form role="form">
                               <div class="form-group">
                                  <label for="name">用户名：</label>
                                  <input type="text" class="form-control user_name" readonly placeholder="lgh">
                                  <p class="error_msg text-danger"></p>
                               </div>
                               <div class="form-group">
                                  <label for="name">企业名称：</label>
                                  <input type="text" class="form-control user_company" placeholder="lgh公司">
                                  <p class="error_msg text-danger"></p>
                               </div>
                               <div class="form-group">
                                  <label for="name">联系人：</label>
                                  <input type="text" class="form-control user_tname" placeholder="lgh">
                                  <p class="error_msg text-danger"></p>
                               </div>
                               <div class="form-group">
                                  <label for="name">联系电话：</label>
                                  <input type="text" class="form-control user_phone" placeholder="111111000">
                                  <p class="error_msg text-danger"></p>
                               </div>
                               <div class="form-group">
                                  <label for="name">传真号码：</label>
                                  <input type="text" class="form-control user_fax" placeholder="1111111000">
                                  <p class="error_msg text-danger"></p>
                               </div>
                               <div class="form-group">
                                  <label for="name">联系邮箱：</label>
                                  <input type="text" class="form-control user_email" placeholder="110@qq.com">
                                  <p class="error_msg text-danger"></p>
                               </div>
                               <div class="form-group">
                                  <label for="name">联系QQ：</label>
                                  <input type="text" class="form-control user_qq" placeholder="110">
                                  <p class="error_msg text-danger"></p>
                               </div>
                                <div class="form-group u_address">
                                    <label for="name">地区：</label>
                                    <select class="form-control user_asheng">
                                        <option>广东省</option>
                                        <option>广西省</option>
                                        <option>广南省</option>
                                        <option>江西省</option>
                                        <option>湖南省</option>
                                    </select>
                                    <select class="form-control user_ashi">
                                        <option>广州市</option>
                                        <option>佛山市</option>
                                        <option>汕尾市</option>
                                        <option>深圳市</option>
                                        <option>汕头市</option>
                                    </select>
                                    <select class="form-control user_aqu">
                                        <option>天河区</option>
                                        <option>白云区</option>
                                        <option>越秀区</option>
                                        <option>黄埔区</option>
                                        <option>海珠区</option>
                                    </select>
                                    <input type="text" class="form-control user_adetail"/>
                                </div>
                               <button type="submit" class="btn btn-orange">提交</button>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="myapprove">
                            <form role="form">
                                <div class="form-group">
                                    <label for="name">企业营业执照：</label>
                                    <div id="gallery"><a href='statics/front/images/updown/pic2.jpg' class='lightbox' rel='roadtrip' title=''><img src="statics/front/images/updown/pic2.jpg"></a></div>
                                    <input type="file" id="inputfile">
                                </div>
                                 <div class="form-group">
                                    <label for="name">组织机构代码：</label>
                                    <div id="gallery"><a href='statics/front/images/updown/pic4.jpg' class='lightbox' rel='roadtrip' title=''><img src="statics/front/images/updown/pic4.jpg"></a></div>
                                    <input type="file" id="inputfile">
                                </div>
                                 <div class="form-group">
                                    <label for="name">税务登记证：</label>
                                    <div id="gallery"><a href='statics/front/images/updown/pic3.jpg' class='lightbox' rel='roadtrip' title=''><img src="statics/front/images/updown/pic3.jpg"></a></div>
                                    <input type="file" id="inputfile">
                                </div>
                               <button type="submit" class="btn btn-orange">认证</button>
                            </form>
                        </div>
                        <div class="tab-pane fade" id="mypwd">
                            <form role="form">
                               <div class="form-group">
                                  <label for="name">原密码：</label>
                                  <input type="text" class="form-control user_pwd" placeholder="请输入原密码">
                                  <p class="error_msg text-danger"></p>
                               </div>
                               <div class="form-group">
                                  <label for="name">新密码：</label>
                                  <input type="text" class="form-control user_pwdn" placeholder="请输入新密码">
                                  <p class="error_msg text-danger"></p>
                               </div>
                               <div class="form-group">
                                  <label for="name">确认密码：</label>
                                  <input type="text" class="form-control user_pwdnd" placeholder="请再次输入密码">
                                  <p class="error_msg text-danger"></p>
                               </div>
                               <button type="submit" class="btn btn-orange">修改</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
