                                  [/#list]
                              </select>
                            </span>
                            <button id="queryGoodsBtn_3" class="btn btn-orange" type="submit"><i class="icon-search"></i> 查找</button>
                          </div>
                          <div class="myorder_table">
                              <table class="table table-hover table-org">
                                <thead>
                                    <tr>
                                        <th>商品编号</th>
                                        <th>类别</th>
                                        <th>品名</th>
                                        <th>品牌</th>
                                        <th>仓库</th>
                                        <th>挂牌量</th>
                                        <th>起订量</th>
                                        <th>单价（元)</th>
                                        <th>点价时间</th>
                                        <th>发布时间</th>
                                        <th>编辑/详情</th>
                                    </tr>
                                </thead>
                                <tbody>
                                  [#list overduePage.recordList as bean]
                                    <tr>
                                        <td>${bean.goodsNo}</td>
                                        <td>${bean.catName}</td>
                                        <td>${bean.catName2}</td>
