                                        <td>${bean.stopDate?string("yyyy-MM-dd")} ${bean.stopHour?string('00')}:${bean.stopMinute?string('00')}:00</td>
                                        [#else]
                                        <td>[#if bean.price?if_exists] ${bean.price?string("currency")} [/#if]</td>
                                        <td></td>
                                        [/#if]
                                        <td>${bean.createTime?string("yyyy-MM-dd")}</td>
                                        <td><a href="${rc.contextPath}/goods/edit/${bean.id}.html" target="_blank">编辑</a> 
                                        <a href="${rc.contextPath}/mall/item/detail/${bean.id}.html" target="_blank">详情</a></td>
                                    </tr>
                                  [/#list]
                                </tbody>
                              </table>
                          </div>
                          <div id="page_2"></div>
                        </div>
                        <div class="tab-pane fade [#if curList==3] in active [/#if]" id="myo_cepai">
                          <div class="text-c">
                            <span class="select-box" style="width:150px">类别
                              <select class="select" name="catId_3" id="catId_3" >
                                  <option value="">--请选择--</option>
                                  [#list level1SpCatList as bean]
                                  <option value="${bean.id}" [#if catId_3==bean.id] selected [/#if]>${bean.catName!''}</option>
                                  [/#list]
                              </select>
                            </span>
                            <span class="select-box" style="width:150px">品名
                              <select class="select" name="catId2_3" id="catId2_3">
                              </select>
                            </span>
                            <span class="select-box" style="width:150px">品牌
                              <select class="select" name="brandId_3" id="brandId_3">
                              </select>
                            </span>
                            <span class="select-box" style="width:150px">仓库
                              <select class="select" name="storage_3" id="storage_3">
                                  <option value="">--请选择--</option>
                                  [#list storageList as bean]
