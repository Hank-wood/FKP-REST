                                  [/#list]
                              </select>
                            </span>
                            <span class="select-box" style="width:150px">品名
                              <select class="select" name="catId2_2" id="catId2_2">
                              </select>
                            </span>
                            <span class="select-box" style="width:150px">品牌
                              <select class="select" name="brandId_2" id="brandId_2">
                              </select>
                            </span>
                            <span class="select-box" style="width:150px">仓库
                              <select class="select" name="storage_2" id="storage_2">
                                  <option value="">--请选择--</option>
                                  [#list storageList as bean]
                                  <option value="${bean.value}" [#if storage_2==bean.value] selected [/#if]>${bean.desc!''}</option>
                                  [/#list]
                              </select>
                            </span>
                            <button id="queryGoodsBtn_2" class="btn btn-orange" type="submit"><i class="icon-search"></i> 查找</button>
                          </div>
                          <div class="myorder_table">
                              <table class="table table-hover table-org">
                                <thead>
                                    <tr>
                                        <th>商品编号</th>
                                        <th>类别</th>
                                        <th>品名</th>
                                        <th>品牌</th>
                                        <th>仓库</th>
                                        <th>挂牌量</th>
                                        <th>起订量</th>
                                        <th>单价（元)</th>
                                        <th>点价时间</th>
                                        <th>发布时间</th>
                                        <th>编辑/详情</th>
                                    </tr>
                                </thead>
                                <tbody>
                                  [#list unlistedPage.recordList as bean]
                                    <tr>
                                        <td>${bean.goodsNo}</td>
                                        <td>${bean.catName}</td>
                                        <td>${bean.catName2}</td>
                                        <td>${bean.brandName}</td>
                                        <td>${bean.storageName}</td>
