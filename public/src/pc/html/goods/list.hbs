<!doctype html>
<html lang="en">
<head>
<title>联华大宗</title>
@@include('../_common/header/head.html')
</head>
<body>
@@include('../_common/header/header.html')
<div class="wrapper">
    <div class="current_path container">
        <a href="${rc.contextPath}/index.html">首页</a> > <a href="${rc.contextPath}/account-center.html">会员中心</a> > <a href="#">我的商品</a> 
    </div>
    <div class="myaccount_main">
        <div class="container">
            <div class="row clearfix">
                <div class="account_l fl wid-2">
                    @@include('../_common/account.hbs')
                </div>
                <div class="account_r fl wid-10">
                    <ul id="myTab" class="nav nav-tabs">
                        <li [#if curList==1] class="active" [/#if]><a href="#myo_ok" data-toggle="tab">挂牌中（<i>${listedPage.totalCount}宗</i>）</a></li>
                        <li [#if curList==2] class="active" [/#if]><a href="#myo_del" data-toggle="tab">未挂牌（<i>${unlistedPage.totalCount}宗</i>）</a></li>
                        <li [#if curList==3] class="active" [/#if]><a href="#myo_cepai" data-toggle="tab">逾期撤牌（<i>${overduePage.totalCount}宗</i>）</a></li>
                    </ul>
                    <form id="listPageQueryForm" action="${rc.contextPath}/goods/list.html">
                        <input type="hidden" name="curList" id="curList" value="${curList}"/>
                        <input type="hidden" name="pageCurrent_1" id="pageCurrent_1" value="${pageCurrent_1}"/>
                        <input type="hidden" name="pageCurrent_2" id="pageCurrent_2" value="${pageCurrent_2}"/>
                        <input type="hidden" name="pageCurrent_3" id="pageCurrent_3" value="${pageCurrent_3}"/>
                    <div id="myTabContent" class="tab-content myorder_content">
                        <div class="tab-pane fade [#if curList==1] in active [/#if]" id="myo_ok">
                          <div class="text-c">
                            <span class="select-box" style="width:150px">类别
                              <select class="select" name="catId_1" id="catId_1" >
                                  <option value="">--请选择--</option>
                                  [#list level1SpCatList as bean]
                                  <option value="${bean.id}" [#if catId_1==bean.id] selected [/#if]>${bean.catName!''}</option>
                                  [/#list]
                              </select>
                            </span>
                            <span class="select-box" style="width:150px">品名
                              <select class="select" name="catId2_1" id="catId2_1">
                              </select>
                            </span>
                            <span class="select-box" style="width:150px">品牌
                              <select class="select" name="brandId_1" id="brandId_1">
                              </select>
                            </span>
                            <span class="select-box" style="width:150px">仓库
                              <select class="select" name="storage_1" id="storage_1">
                                  <option value="">--请选择--</option>
                                  [#list storageList as bean]
                                  <option value="${bean.value}" [#if storage_1==bean.value] selected [/#if]>${bean.desc!''}</option>
                                  [/#list]
                              </select>
                            </span>
                            <button id="queryGoodsBtn_1" class="btn btn-orange" type="submit"><i class="icon-search"></i> 查找</button>
                            <button id="addGoodsBtn" class="btn btn-orange" type="submit"><i class="icon-search"></i> 添加</button>
                          </div>
                          <div class="myorder_table">
                              <table class="table table-hover table-org">
                                <thead>
                                    <tr>
                                        <th>商品编号</th>
                                        <th>类别</th>
                                        <th>品名</th>
                                        <th>品牌</th>
                                        <th>仓库</th>
                                        <th>挂牌量</th>
                                        <th>起订量</th>
                                        <th>单价（元)</th>
                                        <th>点价截止时间</th>
                                        <th>发布时间</th>
                                        <th>编辑/详情</th>
                                    </tr>
                                </thead>
                                <tbody>
                                  [#list listedPage.recordList as bean]
                                    <tr>
                                        <td>${bean.goodsNo}</td>
                                        <td>${bean.catName}</td>
                                        <td>${bean.catName2}</td>
                                        <td>${bean.brandName}</td>
                                        <td>${bean.storageName}</td>
                                        <td>${bean.stock?string('0.####')}${bean.unitName}</td>
                                        <td>${bean.minQuantity?string('0.####')}${bean.unitName}</td>
                                        [#if bean.valuation==0]
                                        <td>${bean.exchangeName}${bean.contractPeriod} [#if bean.discount>0]+[/#if] [#if bean.discount != 0]${bean.discount}[/#if] </td>
                                        <td>${bean.stopDate?string("yyyy-MM-dd")} ${bean.stopHour?string('00')}:${bean.stopMinute?string('00')}:00</td>
                                        [#else]
                                        <td>[#if bean.price?if_exists] ${bean.price?string("currency")} [/#if]</td>
                                        <td></td>
                                        [/#if]
                                        <td>${bean.createTime?string("yyyy-MM-dd")}</td>
                                        <td><a href="${rc.contextPath}/goods/edit/${bean.id}.html" target="_blank">编辑</a> 
                                        <a href="${rc.contextPath}/mall/item/detail/${bean.id}.html" target="_blank">详情</a></td>
                                    </tr>
                                  [/#list]
                                </tbody>
                              </table>
                          </div>
                          <div id="page_1">
                          
                          </div>
                        </div>
                        <div class="tab-pane fade [#if curList==2] in active [/#if]" id="myo_del">
                            <div class="text-c">
                            <span class="select-box" style="width:150px">类别
                              <select class="select" name="catId_2" id="catId_2" >
